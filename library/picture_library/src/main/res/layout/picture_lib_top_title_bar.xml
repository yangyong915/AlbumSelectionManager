<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_picture_top_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_picture_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <ImageView
            android:id="@+id/picture_left_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/picture_back" />

        <TextView
            android:id="@+id/picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableEnd="?attr/picture.arrow_down.icon"
            android:drawablePadding="2dp"
            android:drawableRight="?attr/picture.arrow_down.icon"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:padding="6dp"
            android:text="@string/picture_camera_roll"
            android:textColor="@color/title_bar_black"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:id="@+id/ll_picture_container"
            android:layout_width="@dimen/dp_86"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="8dp"
            android:background="@mipmap/ic_confirm_disable"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_picture_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_ok"
                android:textColor="@color/color_selector_top"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_title_bar_colored_line" />

    </RelativeLayout>
</LinearLayout>
